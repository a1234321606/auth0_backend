{
  "prefix": "/api",
  "version": "v1",
  "port": 3003,
  "auth": {
    "domain": "$AUTH0_DOMAIN",
    "clientId": "$AUTH0_CLIENT_ID",
    "clientSecret": "$AUTH0_CLIENT_SECRET",
    "unless": [
      "/api/swagger",
      "/api/favicon.ico"
    ]
  },
  "swagger": {
    "urls": [
      {
        "url": "/api/docs/user/index.yaml",
        "name": "User"
      }
    ],
    "defaultModelsExpandDepth": "3",
    "defaultModelExpandDepth": "3"
  },
  "mailer": {
    "host": "smtp.gmail.com",
    "port": 465,
    "secure": true,
    "auth": {
      "user": "$SMTP_ACCOUNT",
      "pass": "$SMTP_PASSWORD"
    }
  }
}
